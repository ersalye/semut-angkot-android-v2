<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="id.pptik.semutangkot.BikeCommunityActivity"
    tools:showIn="@layout/activity_bike_community">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/share_layout"
            android:layout_centerInParent="true"
            >
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/share_icon"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher_round"
                />
            <TextView
                android:layout_margin="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/cpb_blue_dark"
                android:id="@+id/title_text"
                android:gravity="center"
                android:text="AKTIFKAN BIKE SHARING \nMODE"
                />
            <Button
                android:layout_marginTop="5dp"
                android:id="@+id/map_button"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_full_round_primary"
                android:text="Lihat Peta"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/colorPrimaryDark"
                />
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
