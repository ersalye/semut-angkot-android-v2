<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardElevation="3dp"
        android:id="@+id/mainView"
        app:cardCornerRadius="2dp"
        app:cardMaxElevation="2dp"
        app:contentPadding="5dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:id="@+id/layout_penumpang"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Jumlah \nPenumpang"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gps_location"
                    android:text="8"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#444444"
                    android:textSize="45sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@id/layout_penumpang"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/icon_angkot"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/ic_launcher_round"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="20dp"
                            android:id="@+id/name_text"
                            android:fontFamily="@font/roboto"
                            style="@style/TextAppearance.AppCompat.Medium"
                            android:paddingTop="5dp"
                            android:textStyle="bold"
                            android:text="Hendra Permana"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="20dp"
                            android:id="@+id/detail_text"
                            android:fontFamily="@font/roboto"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:paddingBottom="5dp"
                            android:text="Lokasi 9 Jam yang lalu"
                            />
                        <TextView
                            android:background="@drawable/bg_almost_round"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/phone_text"
                            android:text="Telepon"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/white"
                            style="@style/Base.TextAppearance.AppCompat.Medium"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>